<div class="col-6">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    File
                </th>
                <th>
                    Size
                </th>
                <th>
                    Created At
                </th>
            </tr>
        </thead>
        <tbody>
            <% files.forEach(function(file, idx){ %> 
                <tr>
                    <td>
                        <%= idx + 1 %>
                    </td>
                    <td>
                        <span>
                            <button data-filename="<%= file.name %>" class="btn btn-link clickme">
                                <%= file.name %>
                            </button>
    
                            <form action="/files/delete/<%= file.name %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger fa fa-times"></button>
                            </form>
                        </span>
                    </td>
                    <td><%= file.size %></td>
                    <td><%= file.createdAt %></td>
                </tr>
            <% }); %> 
        </tbody>
    </table>    
</div>